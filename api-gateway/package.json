{
  "name": "find-it-api-gateway",
  "version": "1.0.0",
  "description": "API-gateway and service discovery for findit",
  "main": "index.js",
  "scripts": {
    "check": "npm-check --skip-unused",
    "preinstall": "npm i -g nodemon node-inspector rimraf npm-run-all npm-check",
    "start": "npm-run-all -s clean build start:simple",
    "start:simple": "node .",
    "start:dev": "npm-run-all -s clean build -p watch:*",
    "start:debug": "npm-run-all -s clean build -p watch:* debug",
    "clean": "npm-run-all -p clean:*",
    "clean:dist": "rimraf dist",
    "clean:cov": "rimraf coverage",
    "debug": "node-debug",
    "build": "npm-run-all -s build:ts",
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "watch:node": "nodemon --debug --delay 2.5",
    "lint": "tslint ./src/{,**/}*.ts",
    "pretest": "npm-run-all -s clean build"
  },
  "dependencies": {
    "@types/node": "^4.2.23",
    "http-proxy": "1.13.2",
    "node-docker-monitor": "1.0.4",
    "parseurl": "1.3.1",
    "config": "^1.21.0",
    "cors": "^2.7.1",
    "js-yaml": "^3.6.1",
    "jsonwebtoken": "^8.1.0",
    "uuid": "^3.1.0",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "@types/config": "0.0.29",
    "@types/cors": "0.0.29",
    "@types/js-yaml": "^3.5.25-alpha",
    "@types/node": "^4.0.26-alpha",
    "@types/serve-static": "^1.7.27",
    "@types/supertest": "^2.0.3",
    "@types/winston": "^2.2.25-alpha",
    "ts-helpers": "^1.1.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "npm-run-all": "^3.0.0",
    "rimraf": "^2.0.0"
  }
}
